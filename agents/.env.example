# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME="Procurement & Budget Management"
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ============================================================================
# Azure Service Bus
# ============================================================================
SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
SERVICE_BUS_TOPIC_NAME=invoice-events

# ============================================================================
# Azure Storage (Tables)
# ============================================================================
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=your-key;EndpointSuffix=core.windows.net
INVOICES_TABLE_NAME=invoices
VENDORS_TABLE_NAME=vendors
BUDGETS_TABLE_NAME=budgets

# ============================================================================
# Azure Document Intelligence
# ============================================================================
DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
DOCUMENT_INTELLIGENCE_API_KEY=your-api-key

# ============================================================================
# Azure Blob Storage (Document Storage)
# ============================================================================
BLOB_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=your-key;EndpointSuffix=core.windows.net
BLOB_CONTAINER_NAME=invoice-documents

# ============================================================================
# LLM Configuration (Optional - for AI agents)
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================================================
# LangSmith (Optional - for observability)
# ============================================================================
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=procurement-budget-management
LANGSMITH_TRACING_ENABLED=False

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_POLL_INTERVAL_SECONDS=5
AGENT_MAX_CONCURRENT_MESSAGES=10

# ============================================================================
# Business Rules
# ============================================================================
AUTO_APPROVE_THRESHOLD=1000.00
REQUIRE_PO_MATCH=True
REQUIRE_BUDGET_CHECK=True
