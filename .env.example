# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
API_TITLE="Procurement & Budget Management"
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
REPOSITORY_TYPE=azure_table_storage
# ============================================================================
# Azure Service Bus
# ============================================================================
SERVICE_BUS_HOST_NAME=sb-your-namespace.servicebus.windows.net/
SERVICE_BUS_TOPIC_NAME=invoice-events

# ============================================================================
# Azure Storage (Tables)
# ============================================================================
AZURE_STORAGE_ACCOUNT_URL=https://youraccount.table.core.windows.net/
INVOICES_TABLE_NAME=invoices
VENDORS_TABLE_NAME=vendors
BUDGETS_TABLE_NAME=budgets

# ============================================================================
# Azure Document Intelligence
# ============================================================================
DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# ============================================================================
# Azure Blob Storage (Document Storage)
# ============================================================================
BLOB_STORAGE_ACCOUNT_URL=https://youraccount.blob.core.windows.net/
BLOB_CONTAINER_NAME=invoices

# ============================================================================
# LLM Configuration (Optional - for AI agents)
# ============================================================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ============================================================================
# LangSmith (Optional - for observability)
# ============================================================================
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=procurement-budget-management
LANGSMITH_TRACING_ENABLED=False

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_POLL_INTERVAL_SECONDS=5
AGENT_MAX_CONCURRENT_MESSAGES=10

# ============================================================================
# Business Rules
# ============================================================================
AUTO_APPROVE_THRESHOLD=1000.00
REQUIRE_PO_MATCH=True
REQUIRE_BUDGET_CHECK=True
